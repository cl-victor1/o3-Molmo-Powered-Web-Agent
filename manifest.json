{
  "manifest_version": 3,
  "name": "Web Browser AI Agent",
  "version": "1.0",
  "description": "AI-powered web browser automation using natural language commands",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 